@model IEnumerable<PersonResponse>
@{
    Layout = null;
}

<link rel="stylesheet" href="~/StyleSheet.css" />
<h1>Persons</h1>
<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date Of Birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Country</th>
            <th>Address</th>
            <th>Receive News Letter</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PersonResponse person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Email</td>
                <td>@person.DateOfBirth?.ToShortDateString()</td>
                <td>@person.Age</td>
                <td>@person.Gender</td>
                <td>@person.CountryName</td>
                <td>@person.Address</td>
                <td>@person.ReceiveNewsLetter</td>
            </tr>
        }
    </tbody>
</table>