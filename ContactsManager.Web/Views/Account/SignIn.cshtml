@model Login 
@{
    ViewBag.pageTitle = "Register";
}

<div class="text-gray">
    <span>Contacts</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>Sign In</span>
</div>

<div class="form-container">
    <p>Create an Account!</p>
    <a asp-action="Register" asp-controller="Account">Register</a>

    <form asp-action="SignIn" asp-controller="Account" method="post">
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email"></label>
            </div>
            <div class="flex-1">
                <input class="form-input" asp-for="Email" />
                <span class="text-red" asp-validation-for="Email"></span>
            </div>
        </div>
        
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Password"></label>
            </div>
            <div class="flex-1">
                <input class="form-input" asp-for="Password" />
                <span class="text-red" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button-green-back button" type="submit">Sign In</button>
            </div>
        </div>

        <div class="text-red">
            <div class="text-red" asp-validation-summary="All"></div>
        </div>

    </form>
</div>
@section Scripts {
    <partial name="_ValidationScript" />
}